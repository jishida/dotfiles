set number
set hlsearch
set backspace=eol,start,indent
set tabstop=2
set shiftwidth=2
set expandtab
set fenc=utf-8
set list
set listchars=tab:^\ ,trail:\ ,eol:↲,extends:»,precedes:«,nbsp:%

tnoremap <C-c><C-c> <C-\><C-n>

inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-h> <Left>
inoremap <C-l> <Right>

nnoremap <C-j> 5j
nnoremap <C-k> 5k
nnoremap <C-h> 5h
nnoremap <C-l> 5l

colorscheme slate
syntax enable
